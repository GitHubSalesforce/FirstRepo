<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Owner</field>
        <field>CreatedDate</field>
        <field>Loyalty_Waiver__c</field>
        <field>Low_Kilometer_Waiver__c</field>
        <field>Long_Term_Loyalty_Waiver__c</field>
        <field>Goodwill_Waiver__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Process_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>CRC_and_Acura_Concierge_Supervisors</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>(Loyalty_Waiver__c + Long_Term_Loyalty_Waiver__c + Low_Kilometer_Waiver__c + Goodwill_Waiver__c) &gt; 2000</formula>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>End of Term Waivers - ACS - Agent - Step 1</label>
        <name>End_of_Term_Waivers_ACS_Agent_Step_1</name>
        <rejectionActions>
            <action>
                <name>Process_Declined</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>End of Term waivers approval workflow</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>ISPICKVAL(Group__c, &quot;Acura Concierge&quot;) &amp;&amp; ($UserRole.DeveloperName == &quot;Acura_Concierge_Agent&quot; || $UserRole.DeveloperName == &quot;Acura_Concierge_Team_Leader&quot;) &amp;&amp; NOT(ISPICKVAL(Status, &quot;Closed&quot;) || ISPICKVAL(Status, &quot;Cancelled&quot;)) &amp;&amp; (Loyalty_Waiver__c + Long_Term_Loyalty_Waiver__c + Low_Kilometer_Waiver__c + Goodwill_Waiver__c) &gt; 0 &amp;&amp; (Loyalty_Waiver__c + Long_Term_Loyalty_Waiver__c + Low_Kilometer_Waiver__c + Goodwill_Waiver__c) &lt;= 10000</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Process_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Process_Declined</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Process_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>End of Term  - ACS - Agent</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
